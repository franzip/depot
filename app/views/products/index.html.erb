<h1>Listing products</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Title/Description</th>
      <th>Price</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr class="<%= cycle('last_line_odd', 'last_line_even') %>">
        <td><%= image_tag(product.image_url, class: 'list_image') %></td>
        <td class="list_description">
          <dl>
            <dt><%= product.title %><dt>
            <dd><%= truncate(strip_tags(product.description), length: 80) %></dd>
          </dl>
        </td>
        <td><%= product.price %></td>
        <td class="list_actions"><%= link_to 'Show', product %></td>
        <td class="list_actions"><%= link_to 'Edit', edit_product_path(product) %></td>
        <td class="list_actions"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

